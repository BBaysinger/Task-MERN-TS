{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@types/*": ["../@types/*"]
    }
  },
  "include": [
    "src/**/*",
    "../@types/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}