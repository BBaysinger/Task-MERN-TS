{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "types": ["@testing-library/jest-dom", "jest", "node"], // Add other types as needed
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "baseUrl": "./src", // Set base directory to src
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "lib": ["es6", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "*": ["*"] // Simplifies module resolution from src
    },
    
    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src/**/*"] // Ensure src is included
}
