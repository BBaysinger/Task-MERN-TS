{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["es6", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",
    // "allowImportingTsExtensions": false, // Removed to solve error.
    // "noEmit": true, // Removed to solve error.
    "composite": true, // Added to solve error.

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src", // Set base directory to src
    "paths": {
      "*": ["./*"] // Simplifies module resolution from src
    }
  },
  "include": ["src/**/*"] // Ensure src is included
}
